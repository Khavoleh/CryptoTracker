<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" crossorigin="anonymous">
    <title>Top Crypto</title>
</head>

@model CryptoTracker.Models.CryptoResponse

<h2 class="my-4 text-center">Top Cryptocurrencies</h2>

<div class="container" style="max-width: 1200px;">
    <div class="table-responsive w-100 mx-auto">
        <table class="table table-striped table-bordered text-center small">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Symbol</th>
                <th scope="col">Price (USD)</th>
                <th scope="col">Volume (24h)</th>
                <th scope="col">Change price (1h)</th>
                <th scope="col">Change price (24h)</th>
                <th scope="col">Change price (7d)</th>
                <th scope="col">Circulating Supply</th>
                <th scope="col">Market Cap (USD)</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.Value.Name</td>
                    <td>@item.Value.Symbol</td>
                    <td>@string.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", item.Value.Quote.Usd.Price)</td>
                    <td>@string.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", item.Value.Quote.Usd.Volume24H)</td>
                    <td>@string.Format("{0:0.00}%", item.Value.Quote.Usd.PercentChange1H)</td>
                    <td>@string.Format("{0:0.00}%", item.Value.Quote.Usd.PercentChange24H)</td>
                    <td>@string.Format("{0:0.00}%", item.Value.Quote.Usd.PercentChange7D)</td>
                    <td>@string.Format("{0:N0}", item.Value.CirculatingSupply)</td>
                    <td>@string.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", item.Value.Quote.Usd.Capitalization)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>